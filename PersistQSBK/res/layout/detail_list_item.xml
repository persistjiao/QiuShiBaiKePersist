<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/Detail_Item_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="15"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Detail_Item_UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/Detail_Item_Num"
                android:paddingBottom="6dp"
                android:singleLine="true"
                android:text="我的用户名我的用户名我的用户名我的用户名"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Detail_Item_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingRight="30dp"
            android:text="我的评论详情我的评论详情我的评论详情我的评论详情我的评论详情我的评论详情"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/comment_divider_line" />
    </LinearLayout>

</LinearLayout>